<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ecommerce" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
        <item name="colorPrimary">@color/colorBlueLight</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="colorAccent">@color/colorBlueDark</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>


    <style name="Btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:longClickable">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="Button" parent="Btn">
        <item name="android:background">@drawable/bg_btn_rounded_corner</item>
    </style>

    <style name="BtnSignUp" parent="Btn">
        <item name="background">@drawable/bg_rounded_corner_stroke_sign_up</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="colorControlHighlight">@color/colorBlue</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#6E6D6D</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorGray</item>
        <item name="colorControlNormal">@color/colorBlue</item>
        <item name="colorControlActivated">@color/colorBlue</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">

        <item name="android:textSize">16sp</item>

        <!--Color normal-->
        <item name="colorPrimary">@color/colorGray</item>
        <!--Color when click-->
        <item name="colorControlActivated">@color/colorBlue</item>
    </style>


    <!--Checkbox color style-->
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:textColorSecondary">@color/colorGray</item>
    </style>

    <style name="normal_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="normal_text.grey" parent="normal_text">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="normal_text.bold" parent="normal_text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="normal_text.EditText" parent="normal_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/layout_margin_16dp</item>
        <item name="android:paddingTop">@dimen/layout_margin_16dp</item>
        <item name="android:paddingStart">@dimen/layout_margin_16dp</item>
        <item name="android:paddingBottom">@dimen/layout_margin_16dp</item>
        <item name="android:paddingEnd">@dimen/layout_margin_16dp</item>
        <item name="android:background">@drawable/rounded_border_edittext</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_16dp</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_16dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="normal_text.EditText.Register" parent="normal_text.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/layout_margin_16dp</item>
        <item name="android:paddingTop">@dimen/layout_margin_16dp</item>
        <item name="android:paddingBottom">@dimen/layout_margin_16dp</item>
        <item name="android:paddingStart">@dimen/layout_margin_16dp</item>
        <item name="android:paddingEnd">@dimen/layout_margin_16dp</item>
        <item name="android:background">@drawable/rounded_border_edittext</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_16dp</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_32dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_32dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>

    </style>


</resources>